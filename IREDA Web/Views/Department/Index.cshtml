@{
}
<!-- content start here  -->
<main class="content_box">


    <div class="main_content_box">
        <!-- table header starts here -->
        <div class="content_filter table_header">
            <div class="back_search_wrap">
                <button>
                    <img src="./assets/images/left-arrow.svg" alt="">
                    Go Back
                </button>
                <div class="filter_search">
                    <img src="./assets/images/filter.svg" alt="search">
                    <input type="search" placeholder="Search">
                </div>
            </div>
            <div class="left_filter">
                <button class="button primary_button">
                    <img src="/assets/images/add.svg" alt="download">
                    Add Employee
                </button>
            </div>
        </div>
        <!-- table starts here -->
        <div class="table_section table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Select All</th>
                        <th scope="col">
                            <div class="table_header_icon">
                                Emp. Number
                                <img src="./assets/images/up-arrow.svg" alt="up">
                            </div>
                        </th>
                        <th scope="col">Name <img src="./assets/images/up-arrow.svg" alt="up"></th>
                        <th scope="col">Designation <img src="./assets/images/up-arrow.svg" alt="up"></th>
                        <th scope="col">Level <img src="./assets/images/up-arrow.svg" alt="up"></th>
                        <th scope="col">Status</th>
                        <th scope="col">Change Status</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td scope="row"></td>
                        <td>Emp001</td>
                        <td>Rahul Kumar</td>
                        <td>Chairman & Managing Director</td>
                        <td>Board Level-CMD</td>
                        <td><button class="status_button btn_active">Active</button></td>
                        <td>
                            <div class="form-check form-switch">
                                <input class="form-check-input" type="checkbox" role="switch"
                                       id="flexSwitchCheckChecked" checked>
                            </div>
                        </td>
                        <td>
                            <div class="action_box">
                                <img src="./assets/images/pencil.svg" alt="pencil">
                                <img src="./assets/images/eye.svg" alt="eye">
                            </div>

                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
    <!-- footer starts here -->
    <div class="footer">
        <div class="footer_left">
            <p>© 2024, Powered by <span>IREDA</span></p>
        </div>
        <div class="footer_right">
            <div><img src="./assets/images/facebook.svg" alt="facebook"></div>
            <div><img src="./assets/images/instagram.svg" alt="instagram"></div>
            <div><img src="./assets/images/linkedin.svg" alt="linkedin"></div>
            <div><img src="./assets/images/youtube.svg" alt="youtube"></div>
        </div>
    </div>
</main>